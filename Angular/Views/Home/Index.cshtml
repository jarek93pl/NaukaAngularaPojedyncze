
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<!DOCTYPE html>
<html ng-app="exampleApp">
<head>
    <script src="~/Scripts/angular.js"></script>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title>Demo AngularJS</title>
    <script>        var myApp = angular.module("exampleApp", []);
         myApp.controller("dayCtrl", function ($scope)
        {           
            var NazwaDni = ["poniedziałek", "wtorek", "środa", "czwartek", "piątek", "sobota", "niedziela"];
            $scope.day = NazwaDni[new Date().getDay()];
          
        });  
         myApp.controller("TomowrowCtrl", function ($scope) {
             var NazwaDni = ["poniedziałek", "wtorek", "środa", "czwartek", "piątek", "sobota", "niedziela"];
            $scope.tomorrow = NazwaDni[(new Date().getDay() + 1) % 7];

         });
    </script>
</head>
<body>
    <div class="panel">
        <div class="page-header">
            <h3>Aplikacja AngularJS</h3>
        </div>

        <h4 ng-controller="dayCtrl">Dzisiejszy dzień to {{day || "(nieznany)"}}</h4>
        <h4 ng-controller="TomowrowCtrl">Jutrzejszy dzień to {{tomorrow ||            "(nieznany)"}}</h4>
    </div>
</body>
</html>