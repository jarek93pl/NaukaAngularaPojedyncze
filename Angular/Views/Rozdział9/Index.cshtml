
@{
    ViewBag.Title = "Index";
    Layout = null;
    int x = 0;
}

<!DOCTYPE html>
<html ng-app="exampleApp">
<head>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/angular.js"></script>
    <title>Dyrektywy</title>
    <script>                angular.module("exampleApp", []).controller("defaultCtrl", function ($scope) {

                $scope.data = {};

                $scope.todos = [
                    { action: "Zrobić zakupy", complete: false },
                    { action: "Zadzwonić do hydraulika", complete: false },
                    { action: "Kupić buty do biegania", complete: true },
                    { action: "Kupić kwiaty", complete: false },
                    { action: "Zadzwonić do rodziny", complete: false }];

           $scope.reportChange = function () { console.log("Wyświetlony widok częściowy: " + $scope.viewFile()); } 
        $scope.viewFile = function ()
        {
            return $scope.showList ? "@Url.Action("Lista1")" : "@Url.Action("Lista2")";
        };
            });
    </script>
  
</head>
<body>
    <div id="todoPanel" class="panel" ng-controller="defaultCtrl">      
        <div>Na liście znajduje się {{todos.length}} elementów.</div>
        <div>            Na liście znajduje się <span ng-bind="todos.length"></span> elementów.        </div>
    <div ng-bind-template="Pierwszy: {{todos[0].action}}. Drugi: {{todos[1].action}}">  
        </div>      
    <div ng-non-bindable>            AngularJS używa znaków {{ i }} do określenia szablonów.        </div>


    <h3 class="panel-header">Lista rzeczy do zrobienia</h3>  
  
        <div class="well">            <div>Pierwszy element listy to: {{todos[0].action}}</div>        </div>
        <div class="form-group well">      
        <label for="firstItem">Ustaw pierwszy element listy:</label>      
        <input name="firstItem" class="form-control" ng-model="todos[0].action" />
            
            <div class="well">         
            <div class="checkbox">        
                <label>          
                <input type="checkbox" ng-model="showList">    
                Użyj widoku listy           
                </label> 
                </div>      
            </div>


        </div>
        <ng-include src="viewFile()"  onload="reportChange()"></ng-include> 
    </div>
</body>
</html>
