
@{
    Layout = null;
}
<!DOCTYPE html>
<html ng-app="exampleApp">
<head>
    <title>Usługi i moduły</title>
        @Html.Action("NG", "Home")
    <script>
        angular.module("exampleApp", [])
            .controller("defaultCtrl", function ($scope)
            {
            $scope.data = {
                cities: ["Londyn", "Nowy Jork", "Paryż"],
                totalClicks: 0
                };
            $scope.$watch('data.totalClicks', function (newVal)
            { console.log("Całkowita liczba kliknięć: " + newVal); });
            });    </script>
    <script src="~/Scripts/Dyrektywy/R18Dyrektywy.js"></script>
</head>
<body ng-controller="defaultCtrl">
    <div class="well">       
    <div class="btn-group" tri-button counter="data.totalClicks" source="data.cities">   
        <button class="btn btn-default" ng-repeat="city in data.cities">   
        {{city}}        
            </button>  
        </div>      
    <h5>Liczba kliknięć: {{data.totalClicks}}</h5>  
    </div>
</body>
</html>
