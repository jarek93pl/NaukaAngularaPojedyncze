
@{
    Layout = null;
}

<html ng-app="exampleApp">
<head>
    <title>Dyrektywy</title>
    @Html.Action("NG","home")
    <script>  
        angular.module("exampleApp", []).directive("demoDirective", function () {
            return function (scope, element, attrs) {
                var listElem = angular.element("<ol>");
                element.append(listElem);
                for (var i = 0; i < scope.names.length; i++) {
                    listElem.append(angular.element("<li>").append(angular.element("<span>").text(scope.names[i])));
                }

                var buttons = element.find("button");
                buttons.on("click", function (e) {
                    element.find("li").css("font-weight", "bold");


                });
            };
        }).controller("defaultCtrl", function ($scope)
        { $scope.names = ["Jabłka", "Banany", "Pomarańcze"]; });    </script>
</head>
<body ng-controller="defaultCtrl">
    <h3>Owoce</h3>    <div demo-directive>
         <button>Kliknij mnie</button> 
    </div>
</body>
</html>
