
@{
    Layout = null;
}
<!DOCTYPE html>
<html ng-app="exampleApp">
<head>
    <title>Usługi API DOM</title>
    @Html.Action("NG","Home")
    <script>        angular.module("exampleApp", [])     
    .controller("defaultCtrl", function ($scope, $interval) {  
        $interval(function () {
            $scope.time = new Date().toTimeString();    
    }, 2000);        });    </script>
</head>
<body ng-controller="defaultCtrl">
    <div class="panel panel-default"> 
    <h4 class="panel-heading">Czas</h4>   
    <div class="panel-body">     
        Czas: {{time}}     
        </div>  
    </div>
</body>
</html>