
@{
    Layout = null;
}

<!DOCTYPE html>
<html ng-app="exampleApp">
<head>
    <title>Usługi API DOM</title>
    @Html.Action("NG","Home")
    <script>   
        angular.module("exampleApp", []).controller("defaultCtrl",
            function ($scope, $window)
            {
                $scope.displayAlert = function (msg) { $window.alert(msg); }
            });   
    </script>
</head>
<body ng-controller="defaultCtrl" class="well">
    <button class="btn btn-primary" ng-click="displayAlert('Klikniety!')">   
    Kliknij mnie</button>
</body>
</html>
